---
import Nav from '../components/Nav.astro';
// ClientRouter: ページ遷移をSPAのようにスムーズにする
// これ1つで全ページのリンク遷移にアニメーションが付く
// ※ Astro 4では ViewTransitions という名前だった（5でリネーム）
import { ClientRouter } from 'astro:transitions';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <ClientRouter />
  </head>
  <body>
    <Nav />
    <main>
      <slot />
    </main>
  </body>
</html>

<style>
  body {
    margin: 0;
    font-family: sans-serif;
  }

  main {
    padding: 2rem;
  }
</style>
