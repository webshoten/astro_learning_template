---
import Nav from '../components/Nav.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
  </head>
  <body>
    <Nav />
    <main>
      <slot />
    </main>
  </body>
</html>

<style>
  body {
    margin: 0;
    font-family: sans-serif;
  }

  main {
    padding: 2rem;
  }
</style>
