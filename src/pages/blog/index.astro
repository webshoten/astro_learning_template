---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('blog');
---

<Layout title="ブログ一覧">
  <h1>ブログ一覧</h1>
  <ul>
    {posts.map((post) => (
      <li>
        <a href={`/blog/${post.id}`}>
          {post.data.title}（{post.data.date}）
        </a>
      </li>
    ))}
  </ul>
</Layout>
